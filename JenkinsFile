 node('master') {
    stage('import') {
        git 'https://github.com/1804-Apr-USFdotnet/timothy-hayes-project1.git'
    }
    stage('build') {
        try {
            dir('LocalGourmet') {
                bat 'nuget restore'
                bat 'msbuild /p:MvcBuildViews=true'
            }
        }
        catch (exc) {
            slackError('build')
            throw exc
        }
    }
    stage('test') {
        try {
            bat "VSTest.Console LocalGourmet\\LocalGourmet.PL.UnitTest\\bin\\Debug\\LocalGourmet.PL.UnitTest.dll"
        }
        catch (exc) {
            slackError('test')
            throw exc
        }
    }
    stage('analyze') {
        try {

        }
        catch (exc) {
            slackError('analyze')
            throw exc
        }
    }
    stage('package') {
        try {
                bat 'msbuild /t:package'
        }
        catch (exc) {
            slackError('package')
            throw exc
        }
    }
    stage('deploy') {
        try {
            dir('LocalGourmet/LocalGourmet.PL/obj/Debug/Package') {
                bat "LocalGourmet.PL.deploy.cmd /t /m:https://ec2-52-87-164-36.compute-1.amazonaws.com:8172/msdeploy.axd /u:Administrator /p:${env.Deploy_Password} /a:basic '-AllowUntrusted=True'"
            }
        }
        catch (exc) {
            slackError('deploy')
            throw exc
        }
    }
}

def slackError(stageName) {
    slackSend color: 'danger', message: "${stageName} stage failed. [<${JOB_URL}|${env.JOB_NAME}> <${env.BUILD_URL}console|${env.BUILD_DISPLAY_NAME}>] [${currentBuild.durationString[0..-14]}]"
}