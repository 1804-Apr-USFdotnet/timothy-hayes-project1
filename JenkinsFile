 node('master') {
    stage('import') {
        git 'https://github.com/1804-Apr-USFdotnet/timothy-hayes-project1.git'
    }
    stage('build') {
        try {
            dir('LocalGourmet') {
                bat 'nuget restore'
                bat 'msbuild /p:MvcBuildViews=true'
            }
        }
        catch (exc) {
            slackSend color: 'danger', message: 'build failed!'
            throw exc
        }
    }
    stage('test') {
        try {
            bat "VSTest.Console LocalGourmet.PL.UnitTest\\bin\\Debug\\LocalGourmet.PL.UnitTest.dll"
        }
        catch (exc) {
            slackSend color: 'danger', message: 'test failed!'
            throw exc
        }
    }
    stage('analyze') {
        try {

        }
        catch (exc) {
            slackSend color: 'danger', message: 'analyze failed!'
            throw exc
        }
    }
    stage('package') {
        try {
                bat 'msbuild /t:package'
        }
        catch (exc) {
            slackSend color: 'danger', message: 'package failed!'
            throw exc
        }
    }
    stage('deploy') {
        try {
            dir('LocalGourmet/LocalGourmet.PL/obj/Debug/Package') {
                bat "LocalGourmet.PL.deploy.cmd /t /m:https://ec2-52-87-164-36.compute-1.amazonaws.com:8172/msdeploy.axd /u:Administrator /p:${env.Deploy_Password} /a:basic '-AllowUntrusted=True'"
            }
        }
        catch (exc) {
            slackSend color: 'danger', message: 'deploy failed!'
            throw exc
        }
    }
}