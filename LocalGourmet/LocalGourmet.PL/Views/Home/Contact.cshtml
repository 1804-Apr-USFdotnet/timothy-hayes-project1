@{
    ViewBag.Title = "Contact Us";
}
<br />
<div class="panel panel-default">
    <div class="panel-heading panel-title"><h1>@ViewBag.Title</h1></div>
    <form class="panel-body" method="post" action="~/">
        <div class="form-group row">
            <div class="col-lg-4 pad">
                <input id="name" class="form-control" name="name" type="text" required="required" placeholder="Your name" autofocus />
                <input id="email" class="form-control" name="email" type="email" required="required" placeholder="lg@example.com" />
                <input id="phone" class="form-control" name="phone" type="tel" required="required" placeholder="(111) 222-3333" />
            </div>
            <div class="col-lg-1">
            </div>
            <div class="col-lg-7 pad">
                <textarea id="textarea" name="textarea" placeholder="Type your message here..." rows="5" cols="80"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-10 offset-lg-2">
                <button type="submit">
                    <img src="~/Content/lg.png" height="40" width="40" style="display: inline-block;" />
                </button>
            </div>
        </div>
    </form>
</div>
