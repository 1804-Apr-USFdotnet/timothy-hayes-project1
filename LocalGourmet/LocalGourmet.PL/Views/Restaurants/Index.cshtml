@model IEnumerable<LocalGourmet.BLL.Models.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script>
        function SearchByName() {
            $.ajax({
                method: "GET",
                url: "Restaurants/Index/",
                data: { sort: document.getElementsByName("sort")[0].value }
            })
        }
    </script>
</head>
<body>
    <br />
    <div>
        @*@if (Request.IsAuthenticated)*@
        <a href=@($"/Restaurants/Create") class="btn btn-default btn-toolbar">Add new Restaurant</a>
        <a href="/Restaurants/Index?sort=byName" class="btn btn-default btn-toolbar">Sort By Name</a>
        <a href="/Restaurants/Index?sort=byRating" class="btn btn-default btn-toolbar">Sort By Avg. Rating</a>
        <a href="/Restaurants/Index?sort=byCuisine" class="btn btn-default btn-toolbar">Sort By Cuisine</a>
        <a href="/Restaurants/Index?sort=topThree" class="btn btn-default btn-toolbar">Top 3</a>
        
        <form id="searchForm" onsubmit="SearchByName()" style="display:inline;">
            <input type="submit" value="Search" class="btn btn-default btn-toolbar">
            <input type="text" name="sort" placeholder="keywords...">
        </form>
    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuisine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                #_Reviews
            </th>
            <th>
                Avg. Rating
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviews.Count)
            </td>
            <td>
                @item.GetAvgRating()
            </td>
            <td>
                <div style="width: 300px;">
                    <a href=@($"/Reviews/Create/{item.ID}") class="btn btn-default btn-toolbar">Add Review</a>
                    <a href=@($"/Restaurants/Details/{item.ID}") class="btn btn-default btn-toolbar">Details</a>
                    @*@if(Request.IsAuthenticated)*@
                        <a href=@($"/Restaurants/Edit/{item.ID}") class="btn btn-default btn-toolbar">Edit</a>
                        <a href=@($"/Restaurants/Delete/{item.ID}") class="btn btn-default btn-toolbar">Delete</a>
                </div>
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
