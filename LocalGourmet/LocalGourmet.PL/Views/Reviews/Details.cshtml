@model LocalGourmet.BLL.Models.Review

<!DOCTYPE html>

@{
    ViewBag.Title = "Review";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h1>Review</h1>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Restaurant Name
            </dt>
    
            <dd>
                @Model.GetRestaurant().Name
            </dd>
    
            <dt>
                Reviewer Name
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.ReviewerName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>

            <dt>
                Food Rating
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.FoodRating)
            </dd>
    
            <dt>
                Service Rating
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.ServiceRating)
            </dd>
    
            <dt>
                Atmosphere Rating
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.AtmosphereRating)
            </dd>
    
            <dt>
                Price Rating
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.PriceRating)
            </dd>

            <dt>
                Overall Rating
            </dt>
    
            <dd>
                @Model.GetRating()
            </dd>
    
        </dl>
    </div>
    <div style="float:right;">
        @*@if (Request.IsAuthenticated)*@
            <a href=@($"/Reviews/Edit/{Model.ID}") class="btn btn-default btn-toolbar">Edit</a>
            <a href=@($"/Reviews/Delete/{Model.ID}") class="btn btn-default btn-toolbar">Delete</a>
        <a href=@($"/Reviews/Index") class="btn btn-default btn-toolbar">Back to List</a>
    </div>
    <br />
    <br />
</body>
</html>
